<div class="row">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
  <div class="col-md-8">
    <h1 class="bg-primary"></h1>
    <%= render @users %>
  </div>
  
  <div class="col-md-8">
    <% if @users.any? %>
      <h3>Followers (<%= @users.count %>)</h3>
      <ul class="user">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div> 