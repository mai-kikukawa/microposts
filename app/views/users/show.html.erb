<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h1><%= @user.location %></h1>
      <h1><%= @user.profire %></h1>
    </section>

    
    <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
      <%= link_to "follower", followers_user_path(@user.id), :class => "col-md-6 btn btn-info btn-sm" %>
    <% end %>
    <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
      <%= link_to "following", followers_user_path(@user.id), :class => "col-md-6 btn btn-info btn-sm" %>
    <% end %>
    
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>