<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h1><%= @user.location %></h1>
      <h1><%= @user.profire %></h1>
    </section>

    <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
      <%= link_to "Follower", followers_user_path(@user), :class => "col-md-6 btn btn-info btn-sm" %>
    <% end %>
    <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
      <%= link_to "Following", followings_user_path(@user), :class => "col-md-6 btn btn-info btn-sm" %>
    <% end %>
  </aside>

  <div class="col-md-8">
    <h3><%= @title %> (<%= @users.count %>)</h3>
    <ol class="user">
      <%= render @users %>
    </ol>
  </div>
</div>